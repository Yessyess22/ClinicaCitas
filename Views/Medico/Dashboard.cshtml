@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Panel de Médico";
}
<div class="container mt-5">
    <h2 style="color:#3fbbc0;">Panel de Médico</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Mis Citas</h5>
                    <p class="card-text">Ver y gestionar tus citas programadas.</p>
                    <a href="/Medico/MisCitas" class="btn" style="background:#3fbbc0;color:#fff;border:none;box-shadow:0 2px 8px rgba(63,187,192,0.15);padding:8px 32px;font-size:14px;letter-spacing:1px;border-radius:5px;">Ver Citas</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Pacientes Asignados</h5>
                    <p class="card-text">Consulta el historial de tus pacientes.</p>
                    <a href="/Paciente" class="btn" style="background:#3fbbc0;color:#fff;border:none;box-shadow:0 2px 8px rgba(63,187,192,0.15);padding:8px 32px;font-size:14px;letter-spacing:1px;border-radius:5px;">Ver Pacientes</a>
                </div>
            </div>
        </div>
    </div>
</div>