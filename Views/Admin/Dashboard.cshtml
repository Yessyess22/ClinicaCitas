@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Panel de Administrador";
}
<div class="container mt-5">
    <h2 style="color:#3fbbc0;">Panel de Administrador</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Gestión de Médicos</h5>
                    <p class="card-text">Agregar, editar y eliminar médicos.</p>
                    <a href="/Medico" class="btn" style="background:#3fbbc0;color:#fff;border:none;box-shadow:0 2px 8px rgba(63,187,192,0.15);padding:8px 32px;font-size:14px;letter-spacing:1px;border-radius:5px;">Ir a Médicos</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Gestión de Pacientes</h5>
                    <p class="card-text">Ver y administrar pacientes registrados.</p>
                    <a href="/Paciente" class="btn" style="background:#3fbbc0;color:#fff;border:none;box-shadow:0 2px 8px rgba(63,187,192,0.15);padding:8px 32px;font-size:14px;letter-spacing:1px;border-radius:5px;">Ir a Pacientes</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Gestión de Usuarios y Roles</h5>
                    <p class="card-text">Asignar roles a los usuarios registrados.</p>
                    <a href="/Admin/Usuarios" class="btn" style="background:#3fbbc0;color:#fff;border:none;box-shadow:0 2px 8px rgba(63,187,192,0.15);padding:8px 32px;font-size:14px;letter-spacing:1px;border-radius:5px;">Ir a Gestión de Roles</a>
                </div>
            </div>
        </div>
    </div>
</div>