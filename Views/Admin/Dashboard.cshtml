@{
    ViewData["Title"] = "Panel de Administrador";
}
<div class="container mt-5">
    <h2 class="text-success">Panel de Administrador</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Gestión de Médicos</h5>
                    <p class="card-text">Agregar, editar y eliminar médicos.</p>
                    <a href="/Medico" class="btn btn-success">Ir a Médicos</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Gestión de Pacientes</h5>
                    <p class="card-text">Ver y administrar pacientes registrados.</p>
                    <a href="/Paciente" class="btn btn-success">Ir a Pacientes</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Gestión de Usuarios y Roles</h5>
                    <p class="card-text">Asignar roles a los usuarios registrados.</p>
                    <a href="/Admin/Usuarios" class="btn btn-success">Ir a Gestión de Roles</a>
                </div>
            </div>
        </div>
    </div>
</div>