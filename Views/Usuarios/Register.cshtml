@model ClinicaCitas.Models.RegisterViewModel
@{
    ViewData["Title"] = "Registro de Usuario";
}
<div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="w-100" style="max-width: 350px;">
        <h2 class="text-center mb-4">Registro de Usuario</h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div class="alert alert-danger text-center">@error.ErrorMessage</div>
            }
        }
        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="NombreUsuario" class="form-label"></label>
                <input asp-for="NombreUsuario" class="form-control" style="max-width: 100%;" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" style="max-width: 100%;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" style="max-width: 100%;" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <div id="msg-educativo-register" class="alert alert-info mt-2" style="display:none;">Recuerda no compartir tu contrase√±a.</div>
            </div>
            <script>
                window.onload = function() {
                    var msg = document.getElementById('msg-educativo-register');
                    if (msg) {
                        msg.style.display = 'block';
                        setTimeout(function() { msg.style.display = 'none'; }, 4000);
                    }
                };
            </script>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" style="max-width: 100%;" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn w-100" style="background-color: #3fbbc0; color: #fff;">Registrarse</button>
        </form>
    </div>
</div>
