@model ClinicaCitas.Models.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}
<div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="w-100" style="max-width: 350px;">
        <h2 class="text-center mb-4">Iniciar Sesión</h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div class="alert alert-danger text-center">@error.ErrorMessage</div>
            }
        }
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" style="max-width: 100%;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" style="max-width: 100%;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Recordarme</label>
            </div>
            <button type="submit" class="btn w-100" style="background-color: #3fbbc0; color: #fff;">Entrar</button>
            <div class="mt-3 text-center">
                ¿No tienes cuenta? <a asp-controller="Usuarios" asp-action="Register">Registrar</a>
            </div>
        </form>
    </div>
</div>
