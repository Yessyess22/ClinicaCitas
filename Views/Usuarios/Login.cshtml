@model ClinicaCitas.Models.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}
<div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="w-100" style="max-width: 350px;">
        <h2 class="text-center mb-4">Iniciar Sesión</h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert text-center" style="background:#3fbbc0;color:#fff;">@TempData["SuccessMessage"]</div>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div class="alert alert-danger text-center">@error.ErrorMessage</div>
            }
        }
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" style="max-width: 100%;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Password" class="form-control" type="password" id="loginPassword" style="max-width: 100%;" />
                    <span class="input-group-text" style="cursor:pointer;" onclick="togglePassword('loginPassword', this)">
                        <i class="bi bi-eye"></i>
                    </span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
                <div id="msg-educativo-login" class="alert mt-2" style="display:none; background:#3fbbc0; color:#fff;">Recuerda no compartir tu contraseña.</div>
            </div>
            <script>
                window.onload = function() {
                    var msg = document.getElementById('msg-educativo-login');
                    if (msg) {
                        msg.style.display = 'block';
                        setTimeout(function() { msg.style.display = 'none'; }, 4000);
                    }
                };
                function togglePassword(inputId, iconSpan) {
                    var input = document.getElementById(inputId);
                    var icon = iconSpan.querySelector('i');
                    if (input.type === 'password') {
                        input.type = 'text';
                        icon.classList.remove('bi-eye');
                        icon.classList.add('bi-eye-slash');
                    } else {
                        input.type = 'password';
                        icon.classList.remove('bi-eye-slash');
                        icon.classList.add('bi-eye');
                    }
                }
            </script>
            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Recordarme</label>
            </div>
            <button type="submit" class="btn w-100" style="background-color: #3fbbc0; color: #fff;">Entrar</button>
            <div class="mt-3 text-center">
                ¿No tienes cuenta? <a asp-controller="Usuarios" asp-action="Register">Registrar</a>
            </div>
        </form>
    </div>
</div>
